{
  "name": "flumpjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build-client && npm run build-server",
    "build-client": "webpack --mode production",
    "build-server": "node_modules/.bin/tsc --build tsconfig.build.json",
    "check": "npm-check -u",
    "client": "webpack --watch",
    "deploy": "git fetch && git reset --hard origin/master && npm run build && cp public/* /home/nginx/ && systemctl restart flumpjs",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "jest": "jest --passWithNoTests",
    "lerna": "lerna",
    "test": "npm run eslint && npm run jest"
  },
  "devDependencies": {
    "@types/express": "4.17.6",
    "@types/express-jwt": "0.0.42",
    "@types/express-pino-logger": "4.0.2",
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.0",
    "@types/node": "14.0.13",
    "@types/peerjs": "1.1.0",
    "@types/react": "16.9.36",
    "@types/react-dom": "16.9.8",
    "@types/ws": "7.2.5",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "css-loader": "3.5.3",
    "dotenv": "8.2.0",
    "dotenv-webpack": "1.8.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "faker": "4.1.0",
    "jest": "26.0.1",
    "lerna": "^3.22.1",
    "npm-check": "5.9.2",
    "peerjs": "1.2.0",
    "phaser": "3.23.0",
    "pino-pretty": "4.0.0",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "style-loader": "1.2.1",
    "ts-jest": "26.1.0",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "ts-node-dev": "1.0.0-pre.44",
    "type-fest": "0.15.1",
    "typescript": "3.9.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "dependencies": {
    "colyseus-server": "file:packages/colyseus-server",
    "peer-server": "file:packages/peer-server",
    "websocket-server": "file:packages/websocket-server"
  }
}
