{
  "name": "@wilsjs/wilsjs",
  "private": true,
  "scripts": {
    "build": "time (lerna run build)",
    "check": "time (lerna run check)",
    "eslint": "time (eslint --format compact --fix --report-unused-disable-directives .)",
    "mocha": "time (nyc mocha -r ts-node/register/transpile-only 'packages/*/test/**/*.ts')",
    "lerna-install": "time (npx lerna exec 'npx pnpm install' --concurrency=1 && npx pnpm install)",
    "test": "time (npm run eslint && npm run mocha)"
  },
