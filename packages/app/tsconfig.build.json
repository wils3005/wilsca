{
  "include": ["src/**/*.js", "src/**/*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["DOM", "ESNext"],
    "listEmittedFiles": true,
    "listFiles": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "tsBuildInfoFile": ".tsbuildinfo"
  }
}
