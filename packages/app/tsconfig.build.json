{
  "include": ["src/**/*.js", "src/**/*.ts", "types/**/*.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ESNext"],
    "listEmittedFiles": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext"
  }
}
