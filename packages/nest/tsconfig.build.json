{
  "extends": "./tsconfig.json",
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "noEmit": false,
    "outDir": "./dist/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5"
  }
}
