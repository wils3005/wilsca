{
  "collectCoverage": true,
  "collectCoverageFrom": ["src/*.{js,jsx,ts,tsx}"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["html", "text"],
  "coverageThreshold": {
    "global": {
      "branches": 1,
      "functions": 1,
      "lines": 1,
      "statements": 1
    }
  },
  "moduleNameMapper": {
    "\\.(css|gif|ttf|eot|svg)$": "<rootDir>/__mocks__/assets.ts"
  },
  "preset": "ts-jest",
  "setupFiles": ["<rootDir>/__mocks__/global.ts"],
  "testURL": "http://localhost/",
  "verbose": true
}
