{
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "noEmit": false,
    "outDir": "dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": ".tsbuildinfo"
  }
}
