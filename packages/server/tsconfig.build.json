{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.js", "src/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "noEmit": false,
    "outDir": "dist/",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5"
  }
}
