{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "build/",
    "paths": {},
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5"
  },
  "exclude": ["**/build/", "**/coverage/", "**/node_modules/"],
  "include": ["**/*.js", "**/*.ts"]
}
